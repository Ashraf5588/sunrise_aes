<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Class 4 to 10 Practical Management</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: linear-gradient(135deg, #87CEEB 0%, #E0F6FF 50%, #B0E0E6 100%);
      min-height: 100vh;
      padding: 20px;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
    }

    .header-card {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
      border-radius: 24px;
      padding: 2.5rem;
      margin-bottom: 2rem;
      border: 1px solid rgba(255, 255, 255, 0.3);
      box-shadow: 0 10px 40px rgba(135, 206, 235, 0.2);
      text-align: center;
    }

    .header-card h1 {
      color: #2c3e50;
      font-size: 2.8rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      background: linear-gradient(135deg, #4A90E2, #357ABD);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .header-card p {
      color: #6c757d;
      font-size: 1.2rem;
      font-weight: 500;
    }

    .form-card {
      background: rgba(255, 255, 255, 0.98);
      backdrop-filter: blur(25px);
      border-radius: 20px;
      padding: 2.5rem;
      margin-bottom: 2rem;
      border: 1px solid rgba(255, 255, 255, 0.4);
      box-shadow: 0 15px 35px rgba(135, 206, 235, 0.15);
    }

    .form-group {
      margin-bottom: 2rem;
    }

    .form-group label {
      display: block;
      margin-bottom: 0.8rem;
      color: #2c3e50;
      font-size: 1.1rem;
      font-weight: 600;
    }

    .ios-select, .ios-button {
      width: 100%;
      padding: 1rem 1.5rem;
      border: 2px solid rgba(135, 206, 235, 0.3);
      border-radius: 16px;
      font-size: 1rem;
      font-weight: 500;
      background: rgba(255, 255, 255, 0.9);
      color: #2c3e50;
      transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
      outline: none;
    }

    .ios-select:focus {
      border-color: #4A90E2;
      box-shadow: 0 0 0 4px rgba(74, 144, 226, 0.1);
      background: white;
      transform: translateY(-2px);
    }

    .ios-select option {
      padding: 0.5rem;
      color: #2c3e50;
      background: white;
    }

    .ios-select optgroup {
      font-weight: 600;
      color: #4A90E2;
      background: #f8f9fa;
    }

    .ios-button {
      background: linear-gradient(135deg, #4A90E2, #357ABD);
      color: white;
      border: none;
      cursor: pointer;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      box-shadow: 0 8px 25px rgba(74, 144, 226, 0.3);
      margin-bottom: 1rem;
    }

    .ios-button:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 35px rgba(74, 144, 226, 0.4);
    }

    .ios-button:active {
      transform: translateY(-1px);
      box-shadow: 0 6px 20px rgba(74, 144, 226, 0.3);
    }

    .action-section {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
      border-radius: 20px;
      padding: 2rem;
      border: 1px solid rgba(255, 255, 255, 0.3);
      box-shadow: 0 10px 30px rgba(135, 206, 235, 0.15);
    }

    .action-header {
      text-align: center;
      margin-bottom: 2rem;
    }

    .action-header h2 {
      color: #2c3e50;
      font-size: 1.8rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
    }

    .action-header p {
      color: #6c757d;
      font-size: 1rem;
    }

    .action-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1rem;
    }

    .compact-action-card {
      background: rgba(255, 255, 255, 0.9);
      border: 2px solid rgba(135, 206, 235, 0.3);
      border-radius: 12px;
      padding: 1rem;
      text-decoration: none;
      color: #2c3e50;
      transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
      text-align: center;
    }

    .compact-action-card:hover {
      border-color: #4A90E2;
      transform: translateY(-3px);
      box-shadow: 0 8px 25px rgba(74, 144, 226, 0.2);
      background: white;
      text-decoration: none;
      color: #2c3e50;
    }

    .compact-action-icon {
      width: 40px;
      height: 40px;
      background: linear-gradient(135deg, #4A90E2, #357ABD);
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.2rem;
      font-weight: bold;
    }

    .compact-action-title {
      font-size: 0.9rem;
      font-weight: 600;
      color: #2c3e50;
      margin: 0;
    }

    .form-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    .quick-actions {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
      border-radius: 16px;
      padding: 1.5rem;
      margin-bottom: 2rem;
      border: 1px solid rgba(255, 255, 255, 0.3);
      box-shadow: 0 8px 25px rgba(135, 206, 235, 0.15);
    }

    .quick-actions h3 {
      color: #2c3e50;
      font-size: 1.3rem;
      font-weight: 700;
      margin-bottom: 1rem;
      text-align: center;
    }

    .selector-form {
      display: grid;
      grid-template-columns: 1fr 1fr auto;
      gap: 1rem;
      align-items: end;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
      border-radius: 16px;
      padding: 1.5rem;
      margin-bottom: 2rem;
      border: 1px solid rgba(255, 255, 255, 0.3);
      box-shadow: 0 8px 25px rgba(135, 206, 235, 0.15);
    }

    .selector-group {
      display: flex;
      flex-direction: column;
    }

    .selector-group label {
      margin-bottom: 0.5rem;
      color: #2c3e50;
      font-size: 1rem;
      font-weight: 600;
    }

    .load-button {
      padding: 1rem 2rem;
      background: linear-gradient(135deg, #4A90E2, #357ABD);
      color: white;
      border: none;
      border-radius: 16px;
      cursor: pointer;
      font-weight: 600;
      font-size: 1rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      box-shadow: 0 8px 25px rgba(74, 144, 226, 0.3);
      transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
      height: fit-content;
      white-space: nowrap;
    }

    .load-button:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 35px rgba(74, 144, 226, 0.4);
    }

    .load-button:active {
      transform: translateY(-1px);
      box-shadow: 0 6px 20px rgba(74, 144, 226, 0.3);
    }

    .action-card {
      background: rgba(255, 255, 255, 0.8);
      border: 2px solid rgba(135, 206, 235, 0.2);
      border-radius: 16px;
      padding: 1.5rem;
      text-decoration: none;
      color: #2c3e50;
      transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .action-card:hover {
      border-color: #4A90E2;
      transform: translateY(-3px);
      box-shadow: 0 10px 30px rgba(74, 144, 226, 0.2);
      background: white;
      text-decoration: none;
      color: #2c3e50;
    }

    .action-icon {
      width: 50px;
      height: 50px;
      background: linear-gradient(135deg, #4A90E2, #357ABD);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.5rem;
      font-weight: bold;
    }

    .action-content h3 {
      font-size: 1.2rem;
      font-weight: 700;
      margin-bottom: 0.3rem;
      color: #2c3e50;
    }

    .action-content p {
      color: #6c757d;
      font-size: 0.9rem;
      margin: 0;
    }

    .alert {
      background: rgba(255, 107, 107, 0.1);
      border: 2px solid rgba(255, 107, 107, 0.3);
      border-radius: 12px;
      padding: 1rem;
      color: #e74c3c;
      font-weight: 500;
      text-align: center;
      margin-top: 1rem;
      display: none;
    }

    .success {
      background: rgba(39, 174, 96, 0.1);
      border-color: rgba(39, 174, 96, 0.3);
      color: #27ae60;
    }

    /* Mobile Responsiveness */
    @media (max-width: 768px) {
      body {
        padding: 15px;
      }

      .container {
        max-width: 100%;
      }

      .header-card {
        padding: 2rem 1.5rem;
      }

      .header-card h1 {
        font-size: 2.2rem;
      }

      .form-card, .action-section, .quick-actions {
        padding: 1.5rem;
      }

      .ios-select, .ios-button {
        padding: 0.9rem 1.2rem;
        font-size: 0.95rem;
      }

      .action-card, .compact-action-card {
        padding: 1.2rem;
      }

      .action-icon, .compact-action-icon {
        width: 45px;
        height: 45px;
        font-size: 1.3rem;
      }

      .form-row {
        grid-template-columns: 1fr;
        gap: 1rem;
      }

      .action-grid {
        grid-template-columns: 1fr;
        gap: 1rem;
      }

      .selector-form {
        grid-template-columns: 1fr;
        gap: 1rem;
      }
    }

    @media (max-width: 480px) {
      .header-card {
        padding: 1.5rem 1rem;
      }

      .header-card h1 {
        font-size: 1.8rem;
      }

      .header-card p {
        font-size: 1rem;
      }

      .form-card, .action-section {
        padding: 1.2rem;
      }
    }

    /* Loading state */
    .loading {
      opacity: 0.7;
      pointer-events: none;
    }

    /* Animation */
    .fade-in {
      animation: fadeIn 0.6s ease-out;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</head>
<body>
  <div class="container fade-in">
    <div class="header-card">
      <h1>Class 4-10 Practical Management</h1>
      <p>Select subject to manage practical</p>
    </div>

    <!-- Quick Actions at the top -->
    <div class="quick-actions">
      <h3>🚀 Quick Navigation</h3>
      <div class="action-grid">
        <a href="/internalreport?studentClass=<%= studentClass %>&section=<%= section %>&subject=<%= subject %>&terminal=<%= terminal %>" class="compact-action-card">
          <div class="compact-action-icon">📊</div>
          <div class="compact-action-title">View Record Unit Wise</div>
        </a>

        <a href="/themefillupform?studentClass=<%= studentClass %>&section=<%= section %>&subject=<%= subject%>&terminal=<%=terminal%>" target="_blank" class="compact-action-card">
          <div class="compact-action-icon">⚙️</div>
          <div class="compact-action-title">
            <%if (subject==="SCIENCE") { %>
             Create Practical Rubriks
              <% }else if(subject==="MATHEMATICS"){%>
                Create कार्य सञ्चालन र कार्यसम्पादन Rubriks (20 marks)
              <%}%>
            </div>
        </a>
        <a href="/projectrubrikscreate?studentClass=<%= studentClass %>&section=<%= section %>&subject=<%= subject%>&terminal=<%=terminal%>" target="_blank" class="compact-action-card">
          <div class="compact-action-icon">⚙️</div>
          <div class="compact-action-title"> <%if (subject==="SCIENCE") { %>
             Create ProjectWork Rubriks
              <% }else if(subject==="MATHEMATICS"){%>
                Create प्रस्तुतीकरण र अभिलेखीकरण Rubriks (12 marks)
              <%}%></div>
        </a>
        <% if(subject==="SCIENCE" || subject==="MATHEMATICS" || subject==="SOCIAL" || subject==="HEALTH"){%>
         <a href="/practicalform?studentClass=<%= studentClass %>&section=<%= section %>&subject=<%= subject%>&terminal=<%=terminal%>" target="_blank" class="compact-action-card">
          <div class="compact-action-icon">⚙️</div>
          <div class="compact-action-title">Add Practical </div>
        </a>
        <%}%>

        <a href="/practicalslip?studentClass=<%= studentClass %>&section=<%= section %>&subject=<%= subject %>&terminal=<%= terminal %>" class="compact-action-card">
          <div class="compact-action-icon">📋</div>
          <div class="compact-action-title">Practical Marks Slip</div>
        </a>
      </div>
    </div>

    <!-- Form with side-by-side selectors -->
  
  

    
    

      <button class="load-button" onclick="themeform()">
        🚀 Load Form
      </button>
    </div>
<input type="hidden" id="studentClass" value="<%=studentClass%>">
<input type="hidden" id="section" value="<%=section%>">
    <div id="alert-message" class="alert"></div>
  </div>

  <script>
    function showAlert(message, type = 'error') {
      const alertElement = document.getElementById('alert-message');
      alertElement.textContent = message;
      alertElement.className = `alert ${type === 'success' ? 'success' : ''}`;
      alertElement.style.display = 'block';
      
      setTimeout(() => {
        alertElement.style.display = 'none';
      }, 4000);
    }

    function themeform() {
     
      


   
      const urlParams = new URLSearchParams(window.location.search);
const subject = urlParams.get('subject')
const studentClass = urlParams.get('studentClass')
const section = urlParams.get('section')
const terminal = urlParams.get('terminal')
      // Validation
      if (!studentClass || !section) {
        showAlert('Please select a class and section');
        
        return;
      }

      if (!subject) {
        showAlert('Please select a subject');
        
        return;
      }

      // Show loading state
      const button = event.target;
      const originalText = button.innerHTML;
      button.innerHTML = '🔄 Loading...';
      button.classList.add('loading');
      

      // Navigate to practical detail form
      const url = `/practicaldetailform?subject=${encodeURIComponent(subject)}&studentClass=${encodeURIComponent(studentClass)}&section=${encodeURIComponent(section)}&terminal=${encodeURIComponent(terminal)}`;
      window.location.href = url;
    }

    // Add smooth transitions for form interactions
    document.addEventListener('DOMContentLoaded', function() {
      const selects = document.querySelectorAll('.ios-select');
      
      selects.forEach(select => {
        select.addEventListener('focus', function() {
          this.style.transform = 'translateY(-2px)';
        });
        
        select.addEventListener('blur', function() {
          this.style.transform = 'translateY(0)';
        });
      });

      // Auto-hide alerts
      const urlParams = new URLSearchParams(window.location.search);
      if (urlParams.get('success')) {
        showAlert('Form submitted successfully!', 'success');
      }
    });
  </script>
</body>
</html>