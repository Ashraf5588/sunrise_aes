    /* Student navigation bar */
    .student-nav-bar {
      display: flex;
      align-items: center;
      padding: 10px 16px;
      background: linear-gradient(135deg, #f8f9fa, #e9ecef);
      border-radius: 8px;
      margin: 0 20px 16px;
