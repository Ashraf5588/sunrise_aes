<body>
  <%- include('../partials/nav',{currentPage:'home'}) %>
  
  <%- include('../partials/sidenav', { 
     
      studentClassdata: studentClassdata,
      terminals: terminals 
  }) %>
  
    <div class="container">
    <div class="row mb-5">
      <div class="col-md-8 offset-md-2">
       
    <!-- New Class Selector -->
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-8">
        <div class="modern-form-container">
          <div class="form-header">
            <div class="form-icon">
              <i class="fa-solid fa-graduation-cap"></i>
            </div>
            <h2 class="form-title">Select Configuration</h2>
            <p class="form-subtitle">Choose class, subject, and terminal to view rubriks</p>
          </div>

          <div class="form-content">
            <!-- Class Selection -->
            <div class="form-section">
              <div class="section-header">
                <i class="fa-solid fa-users"></i>
                <span>Class & Section</span>
              </div>
              <div class="input-group">
                <select id="classSelector" class="modern-select">
                  <option value="" selected disabled>Select Class & Section</option>
                  <% 
                    // Sort studentClassdata by class number
                    const sortedClassData = [...studentClassdata].sort((a, b) => {
                      const classA = parseInt(a.studentClass);
                      const classB = parseInt(b.studentClass);
                      if (classA !== classB) {
                        return classA - classB;
                      }
                      return a.section.localeCompare(b.section);
                    });
                    
                    // Group by class for optgroup
                    const classGroups = {};
                    sortedClassData.forEach(item => {
                      const classNum = item.studentClass;
                      if (!classGroups[classNum]) {
                        classGroups[classNum] = [];
                      }
                      classGroups[classNum].push(item);
                    });
                    
                    const sortedClassNumbers = Object.keys(classGroups).sort((a, b) => parseInt(a) - parseInt(b));
                    sortedClassNumbers.forEach(classNum => {
                      const sections = classGroups[classNum];
                  %>
                    <optgroup label="Class <%= classNum %>">
                    <% sections.forEach(studentclass => { %>
                      <option 
                        data-class="<%=studentclass.studentClass%>"
                        data-section="<%=studentclass.section%>">
                        Class <%= studentclass.studentClass %> - Section <%= studentclass.section %>
                      </option>
                    <% }); %>
                    </optgroup>
                  <% }); %>
                </select>
              </div>
            </div>

            <!-- Subject and Terminal Row -->
            <div class="form-row-modern">
              <!-- Subject Selection -->
              <div class="form-section flex-1">
                <div class="section-header">
                  <i class="fa-solid fa-book"></i>
                  <span>Subject</span>
                </div>
                <div class="input-group">
                  <select name="subject" id="subject" class="modern-select">
                    <option value="" disabled selected>Select Subject</option>
                    <% uniqueSubjects = new Set(newsubjectList.map(item => item.newsubject)); %>
                    <% uniqueSubjects.forEach(function(subject) { %>
                      <option value="<%= subject %>" <%= editing && subjectedit.subject === subject ? 'selected' : '' %>>
                        <%= subject %>
                      </option>
                    <% }); %>
                  </select>
                </div>
              </div>

              <!-- Terminal Selection -->
              <div class="form-section flex-1">
                <div class="section-header">
                  <i class="fa-solid fa-calendar-days"></i>
                  <span>Terminal</span>
                </div>
                <div class="input-group">
                  <select name="terminal" id="terminal" class="modern-select">
                    <option value="" disabled selected>Select Terminal</option>
                    <% setup.forEach(function(terminal) { %>
                      <% terminal.terminals.forEach(function(subTerminal) { %>
                        <option value="<%= subTerminal.name %>" <%= editing && subjectedit.terminal === subTerminal.name ? 'selected' : '' %>>
                          <%= subTerminal.name %>
                        </option>
                      <% }); %>
                    <% }); %>
                  </select>
                </div>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="form-actions">
              <button class="modern-submit-btn" onclick="Load()">
                <i class="fa-solid fa-eye"></i>
                <span>Show Rubriks</span>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

  <script>
    function Load() {
      // Get form values
      const classSelector = document.getElementById('classSelector');
      const terminal = document.getElementById('terminal').value;
      const subject = document.getElementById('subject').value;
      const button = document.querySelector('.modern-submit-btn'); // Fixed button selector

      console.log('Form values:', {
        classSelector: classSelector ? classSelector.value : 'not found',
        terminal: terminal,
        subject: subject,
        button: button ? 'found' : 'not found'
      });

      // Validate subject and terminal
      if (!terminal || !subject) {
        alert('Please select both subject and terminal');
        return;
      }

      // Validate class selection
      if (!classSelector || !classSelector.value) {
        alert('Please select a class');
        return;
      }

      // Get selected class data
      const selectedOption = classSelector.options[classSelector.selectedIndex];
      const selectedClass = selectedOption.getAttribute('data-class');
      const selectedSection = selectedOption.getAttribute('data-section');

      console.log('Selected data:', {
        selectedOption: selectedOption,
        selectedClass: selectedClass,
        selectedSection: selectedSection
      });

      // Validate class data
      if (!selectedClass || !selectedSection) {
        alert('Missing class or section information');
        return;
      }

      // Show loading state
      if (button) {
        const originalText = button.innerHTML;
        button.innerHTML = '<span class="loading-spinner"></span>Loading...';
        button.classList.add('loading');
        button.disabled = true;
      }

      console.log('Redirecting with:', {
        subject: subject,
        terminal: terminal,
        studentClass: selectedClass,
        section: selectedSection
      });

      // Redirect to the target page
      const url = `/seerubriks?subject=${encodeURIComponent(subject)}&terminal=${encodeURIComponent(terminal)}&studentClass=${encodeURIComponent(selectedClass)}&section=${encodeURIComponent(selectedSection)}`;
      console.log('Redirect URL:', url);
      
      setTimeout(() => {
        window.location.href = url;
      }, 100);
    }
  </script>
  </script>

