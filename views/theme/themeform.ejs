<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Theme Form</title>
  <style>
    body {
      background-color: #f0f8ff; /* AliceBlue - a light sky blue */
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
      color: #5c3c1c; /* A shade of brown for text */
    }

    .container {
      max-width: 800px;
      margin: 20px auto;
      padding: 20px;
      background: #ffffff;
      border-radius: 12px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1 {
      text-align: center;
      color: #5c3c1c;
    }

    .form-group {
      margin-bottom: 15px;
    }

    label {
      display: block;
      margin-bottom: 5px;
      font-weight: bold;
    }

    input[type="text"], input[type="number"], select {
      width: 100%;
      padding: 10px;
      border: 1px solid #d2b48c; /* Tan - a light brown */
      border-radius: 8px;
      box-sizing: border-box;
      transition: box-shadow 0.2s ease-in-out;
    }

    input[type="text"]:focus, input[type="number"]:focus, select:focus {
      outline: none;
      box-shadow: 0 0 0 2px #87ceeb; /* SkyBlue focus ring */
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th, td {
      border: 1px solid #d2b48c;
      padding: 12px;
      text-align: left;
    }

    th {
      background-color: #a52a2a; /* Brown */
      color: white;
      font-weight: bold;
    }

    tr:nth-child(even) {
      background-color: #f7f2e9; /* A very light, warm gray */
    }

    button[type="submit"] {
      background-color: #a52a2a; /* Brown */
      color: white;
      padding: 12px 25px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-weight: bold;
      transition: background-color 0.2s ease-in-out;
      display: block;
      width: 100%;
      margin-top: 20px;
    }

    button[type="submit"]:hover {
      background-color: #800000; /* Darker brown on hover */
    }
  </style>
</head>
<body>

  <div class="container">
    <h1>Theme Form</h1>
    <form action="/theme/form" method="POST">
      <div class="form-group">
        <label for="roll">Roll:</label>
        <input type="text" name="roll" id="roll" required>
      </div>
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" name="name" id="name" required>
      </div>
      <div class="form-group">
        <label for="studentClass">Class:</label>
        <input type="text" name="studentClass" id="studentClass" required>
      </div>
      <div class="form-group">
        <label for="themeName">Theme Name:</label>
        <select name="themeName" id="themeName">
          <% themeData.forEach(theme => { %>
            <% theme.themes.forEach(themeitem => { %>
              <option value="<%= themeitem.themeName %>"><%= themeitem.themeName %></option>
            <% }) %>
          <% }) %>
        </select>
      </div>

      <% themeData.forEach(themeDoc => { %>
        <% themeDoc.themes.forEach(themeItem => { %>
          <% themeItem.learningOutcome.forEach((outcome, index) => { %>
            <h2><%= outcome.learningOutcomeName %></h2>
            <input type="date" name="evaluationDate_<%= index %>">
            <table>
              <thead>
                <tr>
                  <% outcome.indicators.forEach(indicator => { %>
                    <th><%= indicator.indicatorName %></th>
                  <% }); %>
                  <th>Obtained Marks</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <% outcome.indicators.forEach((indicator, i) => { %>
                    <td><input type="checkbox" name="indicators_<%= index %>_<%= i %>" value="<%= indicator.indicatorsMarks %>" onclick="updateObtainedMarks(this, 'totalMarksbefore_<%= index %>')"></td>
                  <% }); %>
                  <td><input type="number" id="totalMarksbefore_<%= index %>" name="totalMarks_before_<%= index %>" readonly></td>
                </tr>
                <tr>
                  <th colspan="<%= outcome.indicators.length + 1 %>" style="text-align:center;">थप सहायता पछि</th>
                </tr>
                <tr>
                  <% outcome.indicators.forEach((indicator, i) => { %>
                    <td><input type="checkbox" name="indicators_after_<%= index %>_<%= i %>" value="<%= indicator.indicatorsMarks %>" onclick="updateObtainedMarks(this, 'totalMarksafter_<%= index %>')"></td>
                  <% }); %>
                  <td><input type="number" id="totalMarksafter_<%= index %>" name="totalMarks_after_<%= index %>" readonly></td>
                </tr>
                <tr>
                  <% outcome.indicators.forEach(() => { %>
                    <th>प्रयोग गरिएको साधन</th>
                  <% }); %>
                  <th></th>
                </tr>
                <tr>
                  <% outcome.indicators.forEach((indicator, i) => { %>
                    <td><input type="text" name="tools_<%= index %>_<%= i %>"></td>
                  <% }); %>
                  <td></td>
                </tr>
              </tbody>
            </table>
          <% }); %>
        <% }); %>
      <% }); %>
      <button type="submit">Submit</button>
    </form>
  </div>

  <script>
    function updateObtainedMarks(checkbox, totalMarksId) {
      const row = checkbox.closest('tr');
      const checkboxes = row.querySelectorAll('input[type="checkbox"]');
      let totalMarks = 0;

      checkboxes.forEach(cb => {
        if (cb.checked) {
          totalMarks += parseFloat(cb.value) || 0;
        }
      });

      const totalMarksCell = document.getElementById(totalMarksId);
      if (totalMarksCell) {
        totalMarksCell.value = totalMarks;
      }
    }
  </script>
</body>
</html>