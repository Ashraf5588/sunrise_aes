<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Choose Subject & Terminal</title>
</head>
<body>
   <div class="selector-group">
        <label for="subject">ðŸ“– Subject</label>
        <select name="subject" id="subject" class="ios-select">
          <option value="" disabled selected>-- Choose subject --</option>
          <% uniqueSubjects = new Set(newsubjectList.map(item => item.newsubject)); %>
          <% uniqueSubjects.forEach(function(subject) { %>
            <option value="<%= subject %>" <%= editing && subjectedit.subject === subject ? 'selected' : '' %>>
              <%= subject %>
            </option>
          <% }); %>
        </select>
      </div>
         <div class="selector-group">
        <label for="terminal"> Terminal</label>
        <select name="terminal" id="terminal" class="ios-select">
          <option value="" disabled selected>-- Choose terminal --</option>

          <% terminals.forEach(function(terminal) { %>
            <option value="<%= terminal.terminal %>" <%= editing && subjectedit.terminal === terminal.terminal ? 'selected' : '' %>>
              <%= terminal.terminal %>
            </option>
          <% }); %>
        </select>
      </div>

      <button class="load-button" onclick="Load()">
        ðŸš€ Enter
      </button>
    </div>
    <script>
      function Load()
      {
        const terminal = document.getElementById('terminal').value
        const subject = document.getElementById('subject').value

        if(terminal && subject)
      {
        const urlParams = new URLSearchParams(window.location.search);


         const studentClass = urlParams.get("studentClass");  // "7"
         const section = urlParams.get("section");            // "x"

        window.location.href=`evaluationform?subject=${subject}&terminal=${terminal}&studentClass=${studentClass}&section=${section}`
      }
      else
      {
        alert('please select both subject and terminal')
      }
      }

    </script>
</body>
</html>