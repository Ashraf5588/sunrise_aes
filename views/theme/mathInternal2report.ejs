<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Practical Project Record</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
      background: #f5f5f5;
    }
    .container {
      max-width: 1200px;
      margin: 0 auto;
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
    h1 {
      text-align: center;
      color: #2c3e50;
      margin-bottom: 30px;
    }
    .student-header {
      background: linear-gradient(135deg, #3498db, #2980b9);
      color: white;
      padding: 15px;
      border-radius: 8px;
      margin: 20px 0;
    }
    .student-info {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin: 20px 0;
      font-size: 12px;
    }
    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: center;
      vertical-align: middle;
    }
    th {
      background: #f8f9fa;
      font-weight: bold;
      color: #2c3e50;
    }
    .main-header {
      background: #3498db;
      color: white;
    }
    .theme-header {
      background: #e3f2fd;
      font-size: 11px;
    }
    .practical-name {
      text-align: left;
      background: #f1f8ff;
      font-weight: 500;
    }
    .project-name {
      text-align: left;
      background: #fff8e1;
      font-weight: 500;
    }
    .marks-cell {
      font-weight: bold;
      color: #2c3e50;
    }
    .total-cell {
      background: #e8f5e8;
      font-weight: bold;
    }
    .table-wrapper {
      overflow-x: auto;
      margin: 20px 0;
    }
    @media (max-width: 768px) {
      .student-info {
        flex-direction: column;
      }
      table {
        font-size: 10px;
      }
      th, td {
        padding: 4px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>üìä Indicator Wise Marks Report</h1>

    <% indicatorwiseReport.forEach((student, studentIndex) => { %>
      <div class="student-header">
        <div class="student-info">
          <span><strong>Name:</strong> <%= student.name %></span>
          <span><strong>Roll:</strong> <%= student.roll %></span>
          <span><strong>Class:</strong> <%= student.studentClass %></span>
          <span><strong>Section:</strong> <%= student.section %></span>
        </div>
      </div>

      <div class="table-wrapper">
        <table>
          <thead>
            <tr>
              <th rowspan="2" class="main-header">SN</th>
              <th rowspan="2" class="main-header">Practical/Project Name</th>
              <th colspan="<%= practicalFormatData.reduce((sum, doc) => sum + doc.themes.length, 0) + projectFormatData.reduce((sum, doc) => sum + doc.themes.length, 0) %>" class="main-header">‡§Ü‡§ß‡§æ‡§∞‡§ó‡§§ ‡§™‡•ç‡§∞‡§æ‡§™‡•ç‡§§‡§æ‡§ô‡•ç‡§ï (Theme-wise Marks)</th>
              <th rowspan="2" class="main-header">Total Obtained</th>
            </tr>
            <tr>
              <!-- Practical Themes -->
              <% practicalFormatData.forEach(function(doc) { %>
                <% doc.themes.forEach(function(theme) { %>
                  <th class="theme-header"><%= theme.themeName %></th>
                <% }) %>
              <% }) %>
              <!-- Project Themes -->
              <% projectFormatData.forEach(function(doc) { %>
                <% doc.themes.forEach(function(theme) { %>
                  <th class="theme-header"><%= theme.themeName %></th>
                <% }) %>
              <% }) %>
            </tr>
          </thead>
          <tbody>
            <% 
            let serialNumber = 1;
            
            // Process Practicals
            student.unit.forEach(function(unit) {
              unit.practicals.forEach(function(practical) {
            %>
            <tr>
              <td><%= serialNumber++ %></td>
              <td class="practical-name">üî¨ <%= practical.practicalName || 'Practical Activity' %></td>
              
              <!-- Practical Theme Marks -->
              <% practicalFormatData.forEach(function(doc) { %>
                <% doc.themes.forEach(function(theme) { %>
                  <% 
                  let marks = '';
                  if (practical.criteria && practical.criteria.length > 0) {
                    const criterion = practical.criteria.find(c => c.practicalIndicator === theme.themeName);
                    marks = criterion ? criterion.practicalIndicatorMarks || '0' : '0';
                  }
                  %>
                  <td class="marks-cell"><%= marks %></td>
                <% }) %>
              <% }) %>
              
              <!-- Project Theme Marks (empty for practicals) -->
              <% projectFormatData.forEach(function(doc) { %>
                <% doc.themes.forEach(function(theme) { %>
                  <td>-</td>
                <% }) %>
              <% }) %>
              
              <td class="total-cell"><%= practical.practicalMarks || 0 %></td>
            </tr>
            <% 
              });
            });
            
            // Process Projects
            student.unit.forEach(function(unit) {
              unit.projectWorks.forEach(function(project) {
            %>
            <tr>
              <td><%= serialNumber++ %></td>
              <td class="project-name">üìã <%= project.projectName || 'Project Work' %></td>
              
              <!-- Practical Theme Marks (empty for projects) -->
              <% practicalFormatData.forEach(function(doc) { %>
                <% doc.themes.forEach(function(theme) { %>
                  <td>-</td>
                <% }) %>
              <% }) %>
              
              <!-- Project Theme Marks -->
              <% projectFormatData.forEach(function(doc) { %>
                <% doc.themes.forEach(function(theme) { %>
                  <% 
                  let marks = '';
                  if (project.criteria && project.criteria.length > 0) {
                    const criterion = project.criteria.find(c => c.projectIndicator === theme.themeName);
                    marks = criterion ? criterion.projectIndicatorMarks || '0' : '0';
                  }
                  %>
                  <td class="marks-cell"><%= marks %></td>
                <% }) %>
              <% }) %>
              
              <td class="total-cell"><%= project.projectMarks || 0 %></td>
            </tr>
            <% 
              });
            });
            %>
          </tbody>
        </table>
      </div>

    <% }) %>

  </div>
</body>
</html>
</body>
</html>

