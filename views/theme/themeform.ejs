    }
    
    .student-nav-buttons {
      display: flex;
      gap: 8px;
      overflow-x: auto;
      padding-bottom: 4px;
      flex: 1;
    }
    
    .student-nav-button {
      padding: 8px 16px;
      border: none;
      border-radius: 6px;
      background: #fff;
      color: #2c3e50;
      font-size: 14px;
      cursor: pointer;
      white-space: nowrap;
